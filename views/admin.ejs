<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-okaidia.min.css"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");

      body {
        font-family: "Inter", sans-serif;
      }

      .code-editor {
        background: #1a1a1a;
        border-radius: 12px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      }

      .highlight-area {
        white-space: pre-wrap;
        word-wrap: break-word;
        font-family: "Fira Code", monospace;
        font-size: 0.876rem;
        line-height: 1.5;
        color: #f8f8f2;
        caret-color: white;
        padding: 1.5rem;
        height: 300px;
        tab-size: 2;
      }

      .program-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
      }

      .program-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      }

      .upload-button {
        transition: all 0.2s ease;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
      }

      .upload-button:hover {
        opacity: 0.9;
        transform: scale(1.02);
      }

      .profile-upload {
        border: 2px dashed #e0e0e0;
        transition: border-color 0.2s ease;
      }

      .profile-upload:hover {
        border-color: #818cf8;
      }

      .preview-img {
        object-fit: cover;
      }
    </style>
    <!-- ... (keep head section the same) ... -->
  </head>

  <body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-gray-900 shadow-lg fixed w-full z-50">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <div class="flex-shrink-0 flex items-center">
            <span
              class="text-2xl font-bold bg-gradient-to-r from-indigo-400 to-purple-500 bg-clip-text text-transparent"
            >
              Future Programmers
            </span>
          </div>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-8">
            <a href="/" class="text-gray-300 hover:text-white transition-colors"
              >Home</a
            >
            <a
              href="/logout"
              class="text-gray-300 hover:text-white transition-colors"
              >Logout</a
            >
          </div>

          <!-- Mobile Menu Button -->
          <button
            class="md:hidden p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-800 focus:outline-none"
          >
            <svg
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"
              />
            </svg>
          </button>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="pt-24 pb-12 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
      <div class="space-y-8">
        <!-- Updated Profile Section -->
        <div class="bg-white rounded-2xl p-6 shadow-sm">
          <div class="flex flex-col md:flex-row items-center gap-8">
            <!-- Profile Picture with Updated Upload -->
            <div class="relative group">
              <div
                class="w-32 h-32 rounded-full bg-gray-100 overflow-hidden profile-upload"
              >
                <% if (owner.profilePic) { %>
                <img
                  src="data:<%= owner.profilePic.mimetype %>;base64,<%= owner.profilePic.toString('base64') %>"
                  class="w-full h-full object-cover preview-img"
                />
                <% } else { %>
                <div
                  class="w-full h-full bg-gray-200 flex items-center justify-center"
                >
                  <svg
                    class="w-12 h-12 text-gray-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                    />
                  </svg>
                </div>
                <% } %>
              </div>
              <form
                action="/uploadPic/<%= owner._id %>"
                method="post"
                enctype="multipart/form-data"
                class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 rounded-full transition-opacity"
              >
                <label class="cursor-pointer p-2 text-white">
                  <input
                    type="file"
                    name="profilePic"
                    class="hidden"
                    accept="image/*"
                    onchange="previewImage(event); this.form.submit();"
                  />
                  <svg
                    class="w-8 h-8"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"
                    />
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"
                    />
                  </svg>
                </label>
              </form>
            </div>
            <!-- Profile Info -->
            <div class="text-center md:text-left">
              <h2 class="text-2xl font-bold text-gray-900">
                <%= owner.name %>
              </h2>
              <p class="text-gray-600 mt-1">Admin Account</p>
            </div>
          </div>
        </div>
        <!-- Code Editor Section -->
        <div class="bg-white rounded-2xl shadow-sm p-6">
          <form
            id="codeForm"
            method="post"
            action="/createProgram"
            class="space-y-6"
          >
            <div>
              <label
                for="title"
                class="block text-sm font-medium text-gray-700 mb-2"
                >Program Title</label
              >
              <input
                type="text"
                id="title"
                name="title"
                class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all"
                placeholder="Enter program title"
                required
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Code Editor</label
              >
              <div class="code-editor relative">
                <div id="codeHighlight" class="highlight-area"></div>
                <textarea
                  id="codeInput"
                  name="code"
                  class="highlight-area absolute inset-0 resize-none bg-transparent"
                  placeholder="// Start coding here..."
                  required
                ></textarea>
              </div>
            </div>

            <button
              type="submit"
              class="upload-button px-6 py-3 text-white font-medium rounded-lg shadow-md transition-all"
            >
              Publish Program
            </button>
          </form>
        </div>

        <!-- Programs List -->
        <div class="bg-white rounded-2xl shadow-sm p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-6">
            Published Programs
          </h3>

          <% if (owner.programs.length> 0) { %>
          <div class="grid gap-4">
            <% owner.programs.forEach(program=> { %>
            <div
              class="program-card bg-gray-50 rounded-lg p-4 flex items-center justify-between"
            >
              <a href="/showProgram/<%= program._id %>" class="flex-1">
                <h4
                  class="font-medium text-gray-900 hover:text-indigo-600 transition-colors"
                >
                  <%= program.title %>
                </h4>
              </a>
              <div class="flex items-center gap-4 ml-4">
                <a
                  href="/updateProgram/<%= program._id %>"
                  class="text-gray-400 hover:text-indigo-600 transition-colors"
                >
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L17.764 3.232z"
                    />
                  </svg>
                </a>
                <form action="/deleteProgram/<%= program._id %>">
                  <button
                    type="submit"
                    class="text-gray-400 hover:text-red-600 transition-colors"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"
                      />
                    </svg>
                  </button>
                </form>
              </div>
            </div>
            <% }) %>
          </div>
          <% } else { %>
          <p>No programs found.</p>
          <% } %>
        </div>
      </div>
    </main>

    <!-- Updated Preview Image Script -->
    <script>
      function previewImage(event) {
        const reader = new FileReader();
        reader.onload = function () {
          const previewContainer = event.target.closest(".profile-upload");
          const previewImg = previewContainer.querySelector("img.preview-img");
          const placeholder = previewContainer.querySelector("div");

          if (previewImg) {
            previewImg.src = reader.result;
            previewImg.classList.remove("hidden");
          }

          if (placeholder) {
            placeholder.classList.add("hidden");
          }
        };
        reader.readAsDataURL(event.target.files[0]);
      }
    </script>
  </body>
</html>
